<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_persistance"
    tools:context="com.example.benj.training.PersistanceActivity">

    <!--ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlePersistance"
            android:text="Persistance des données"
            android:textSize="@dimen/titleSize"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />

        <!-- Utilisation de SharedPreferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleSharedPreferences"
            android:text="GetSharedPreferences"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titlePersistance"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/persistanceET"
            android:layout_centerHorizontal="true"
            android:text="Entrez quelquechose"
            android:layout_below="@+id/titleSharedPreferences"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/persButton"
            android:text="Sauvegarder"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/persistanceET"
            />

        <!-- Utilisation de getPreferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleGetPreferences"
            android:text="Utilisation de getPreferences"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/persButton"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getPrefET"
            android:text="Texte à sauvegarder"
            android:layout_below="@+id/titleGetPreferences"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getPrefButton"
            android:text="Sauvegarger"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/getPrefET"
            />

    <!--/ScrollView-->

</RelativeLayout>
